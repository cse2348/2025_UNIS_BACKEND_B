{{>layouts/header}}

{{#post}}
    <form class="container" action="/posts/update" method="post">
        <input name="id" type="hidden" value="{{id}}">
        <div class="mb-3">
            <label class="form-label">제목</label>
            <input type="text" class="form-control" name="title" value="{{title}}" required>
        </div>
        <div class="mb-3">
            <label class="form-label">내용</label>
            <textarea class="form-control" rows="3" name="content" required>{{content}}</textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">작성자</label>
            <input type="text" class="form-control" name="author" value="{{author}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/posts/{{id}}">Back</a>
    </form>
{{/post}}

{{>layouts/footer}}
