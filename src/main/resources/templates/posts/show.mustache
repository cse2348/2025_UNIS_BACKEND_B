{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th>{{article.id}}</th>
        <td>{{article.title}}</td>
        <td>{{article.content}}</td>
    </tr>
    </tbody>
</table>

<a href="/posts/{{article.id}}/edit" class="btn btn-primary">Edit</a>
<a href="/posts/{{article.id}}/delete" class="btn btn-danger">DELETE</a>
<a href="/posts" class="btn btn-secondary">Go to Posts</a>

