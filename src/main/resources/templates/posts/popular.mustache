{{>layouts/header}}

<h2>인기 게시글 Top 5</h2>

<table class="table">
    <thead>
    <tr>
        <th>Id</th><th>Title</th><th>Content</th><th>Author</th><th>CreatedAt</th><th>Views</th>
    </tr>
    </thead>
    <tbody>
    {{#postList}}
        <tr>
            <th>{{id}}</th>
            <td><a href="/posts/{{id}}">{{title}}</a></td>
            <td>{{content}}</td>
            <td>{{author}}</td>
            <td>{{createdAt}}</td>
            <td>{{views}}</td>
        </tr>
    {{/postList}}
    </tbody>
</table>

<a href="/posts/new" class="btn btn-primary mt-3">새 게시글 작성</a>

{{>layouts/footer}}
